<h1>商品一覧</h1>

<%= form_tag(items_path, method: :get) do %>
  <%= search_field_tag :keyword %>
  <%= submit_tag '検索' %>
<% end %>

<table>
  <thead>
  <tr>
    <th></th>
    <th>商品名</th>
    <th>価格</th>
    <th>説明</th>
  </tr>
  </thead>
  <tbody>
  <% @items.each do |item| %>
    <tr>
      <td><%= image_tag item.medium_image_urls[0]['imageUrl'] %></td>
      <td><%= item.name %>
      <td><%= item.price %>
      <td><%= item.caption %>
    </tr>
  <% end %>
  </tbody>
</table>
